<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.homeMain.HomeMainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideLine"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/goBack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:padding="@dimen/dp_5"
                android:src="@drawable/left_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/goBackAddContact"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:padding="@dimen/dp_5"
                android:src="@drawable/left_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/goBackNewMessage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:padding="@dimen/dp_5"
                android:src="@drawable/left_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/goBackMessageDetails"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:padding="@dimen/dp_5"
                android:src="@drawable/left_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:background="@color/transparent"
                android:padding="@dimen/dp_0"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                android:visibility="visible" />

            <TextView
                android:id="@+id/cancelContactChanges"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_15"
                android:fontFamily="@font/hk_grotesk_regular"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="@string/cancel_home"
                android:textColor="@color/dirtyBlue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cancelNewSwarm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_15"
                android:fontFamily="@font/hk_grotesk_regular"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="@string/cancel_home"
                android:textColor="@color/dirtyBlue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_15"
                android:fontFamily="@font/hk_grotesk_regular"
                android:gravity="center_vertical"
                android:text="@string/edit_home"
                android:textColor="@color/dirtyBlue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/homeTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="@dimen/dp_5"
                android:src="@drawable/title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/homeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/hk_grotesk_regular"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/dirtyBlue"
                android:textSize="@dimen/dp_20"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/homeSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/search"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:fontFamily="@font/hk_grotesk_regular"
                android:text="@string/done"
                android:textColor="@color/dirtyBlue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <TextView
                android:id="@+id/createMessage"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:fontFamily="@font/hk_grotesk_regular"
                android:text="@string/create_swarm"
                android:textColor="@color/dirtyBlue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/createSwarm"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:fontFamily="@font/hk_grotesk_regular"
                android:text="@string/create_swarm"
                android:textColor="@color/dirtyBlue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/addSwarmContacts"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:fontFamily="@font/hk_grotesk_regular"
                android:text="@string/add"
                android:textColor="@color/dirtyBlue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/addContact"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/plus"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/newMessage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/create_message"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/moreSettings"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:padding="@dimen/dp_5"
                android:src="@drawable/more"
                android:visibility="gone" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/fragmentRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myToolbar"></LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bottom_tab">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="38dp">

            <LinearLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/homeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hk_grotesk_regular"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textAlignment="center"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_toRightOf="@id/home"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/contacts" />

                <TextView
                    android:id="@+id/contactsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hk_grotesk_regular"
                    android:gravity="center"
                    android:text="@string/contacts"
                    android:textAlignment="center"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toLeftOf="@id/notifications"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/messages" />

                <TextView
                    android:id="@+id/messagesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hk_grotesk_regular"
                    android:gravity="center"
                    android:text="@string/messages"
                    android:textAlignment="center"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notifications" />

                <TextView
                    android:id="@+id/notificationsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hk_grotesk_regular"
                    android:gravity="center"
                    android:text="@string/notifications"
                    android:textAlignment="center"
                    android:textSize="10sp" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/addNewEvent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|clip_horizontal|center"
            android:layout_marginTop="-15dp"
            android:background="@drawable/round_dot"
            android:padding="@dimen/dp_10"
            android:src="@drawable/add_event_to_cal_white" />

    </FrameLayout>

</FrameLayout>