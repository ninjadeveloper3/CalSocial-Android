<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactsFoundItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_profile_card_blue"
        android:src="@drawable/gather_swarms"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/memberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hk_grotesk_regular"
            android:text="Contact Name"
            android:textColor="@color/dirtyBlue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_book"
            android:text="I'm not in your hive"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/addToHive"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_25"
        android:src="@drawable/add_to_hive" />


    <TextView
        android:id="@+id/requestSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_25"
        android:fontFamily="@font/hk_grotesk_regular"
        android:text="@string/request_sent"
        android:textColor="@color/CalSocialYellow"
        android:textSize="15sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/image"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/lightGray" />

</RelativeLayout>