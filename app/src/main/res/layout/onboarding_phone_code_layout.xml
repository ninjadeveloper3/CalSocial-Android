        layout="@layout/CalSocial_phone_code_edittext"
        android:nextFocusDown="@id/code_digit_5" />

    <include
        android:id="@+id/code_digit_5"
        layout="@layout/CalSocial_phone_code_edittext"
        android:nextFocusDown="@id/code_digit_6" />

    <include
        android:id="@+id/code_digit_6"
        layout="@layout/CalSocial_phone_code_edittext" />

